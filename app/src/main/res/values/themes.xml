<resources>
    <!-- Base application theme. -->
    <style name="Theme.EMS" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/colorAccent</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="PrimaryText">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="PrimaryText.AllCaps">
        <item name="textAllCaps">true</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:layout_height">@dimen/_47sdp</item>
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">@color/text_btn_primary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BottomNavigationBar">
        <item name="android:background">@color/colorWhite</item>
        <item name="itemBackground">@drawable/bg_menu_item</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemTextColor">@color/text_menu_item</item>
        <item name="itemIconSize">@dimen/_20sdp</item>
        <item name="itemIconTint">@color/text_menu_item</item>
        <item name="itemTextAppearance">@style/BottomNavigationBarText</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationBarText</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationBarText</item>
    </style>

    <style name="BottomNavigationBarText" parent="PrimaryText.AllCaps">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
