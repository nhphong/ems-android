<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlackMineShaft">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivSplashUpperPart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.15"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_welcome_upper_part" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivSplashMiddlePart"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.67"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_welcome" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivSplashLowerPart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/bg_welcome_lower_part" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivSplashLogoEms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_32sdp"
        android:layout_marginEnd="@dimen/_32sdp"
        android:adjustViewBounds="true"
        android:alpha="0.6"
        android:tint="@color/colorGreenAtlantis"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32"
        app:srcCompat="@drawable/logo_ems" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSplashFeelWellLiveWell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:alpha="0.6"
        android:text="@string/welcome_feel_well_live_well"
        android:textColor="@color/colorGreenAtlantis"
        android:textSize="@dimen/_11sdp"
        android:theme="@style/PrimaryText.AllCaps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivSplashLogoEms" />
</androidx.constraintlayout.widget.ConstraintLayout>
